{
  "extends": "pagarme-react",
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": false,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "react/jsx-filename-extension": 0,
    "react/prop-types": [0],
    "react/jsx-no-bind": [
      2, {
        "ignoreRefs": true,
        "allowBind": true
      }
    ]
  }
}
